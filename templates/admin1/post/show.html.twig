{% extends 'sbadmin.html.twig' %}

{% block title %}Post{% endblock %}

{% block content %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ post.image }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ post.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ post.imageName }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ post.imageSize }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin1_post_index') }}">back to list</a>

    <a href="{{ path('app_admin1_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('admin1/post/_delete_form.html.twig') }}
{% endblock %}
