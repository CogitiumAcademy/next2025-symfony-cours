{% extends 'clean.html.twig' %}

{% block title %}Hello PostController!{% endblock %}


{# 1ère version : image en url absolue #}
{# block headerBackground %}{{ post.image }}{% endblock #}

{# 2ème version : image uploadée avec url relative dans public #}
{% block headerBackground %}{{ asset('images/posts/' ~ post.imageName) }}{% endblock %}

{% block headerTitle %}{{ post.title }}{% endblock %}
{% block headerSubheading %}{% endblock %}

{% block content %}
        
        
        <!-- Post Content-->
        <article class="mb-4">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <h1>{{ post.title }}</h1>
                        <p>{{ post.content | raw }}</p>
                    </div>
                </div>
            </div>
        </article>

{% endblock %}
